---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'a'> {
  variant?: 'primary' | 'secondary';
  href: string;
}

const { 
  variant = 'primary', 
  ...props 
} = Astro.props;

const baseClasses = 'font-bold py-2 px-4 rounded-full inline-block text-center';

const variantClasses = {
  primary: 'bg-brand-teal-dark text-white hover:bg-brand-teal-dark/90',
  secondary: 'bg-brand-pink text-white hover:bg-brand-pink/90',
};
---

<a class:list={[baseClasses, variantClasses[variant], props.class]} {...props}>
  <slot />
</a> 
---
import LogoIcon from './LogoIcon.astro';
---

<footer id="contact" class="font-sans relative bg-brand-teal text-white">
  
  <div class="relative z-10 pt-32 pb-12 px-8">
    <div class="container mx-auto text-center">

      <!-- Logo -->
      <a href="#page-top" class="inline-flex items-center justify-center gap-3 mb-6">
        <LogoIcon class="w-12 h-12 text-white" />
        <span class="text-4xl font-bold">oPills</span>
      </a>

      <!-- Tagline -->
      <p class="text-white text-lg mb-8 max-w-lg mx-auto">
        The future of medication management, guided by expert analysts. Your health, simplified.
      </p>

      <!-- Navigation Links -->
      <div class="flex flex-wrap justify-center gap-x-8 gap-y-2 mb-10 font-script text-2xl text-white">
        <a href="#page-top" class="hover:underline transition-colors">Home</a>
        <a href="#features" class="hover:underline transition-colors">Features</a>
        <a href="#about" class="hover:underline transition-colors">About</a>
        <a href="#testimonials" class="hover:underline transition-colors">Reviews</a>
      </div>

      <!-- Social Media Links -->
      <div class="flex justify-center gap-6 mb-12">
        <a href="#" class="text-white hover:opacity-80 transition-opacity" aria-label="Twitter">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
        </a>
        <a href="#" class="text-white hover:opacity-80 transition-opacity" aria-label="LinkedIn">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
        </a>
      </div>

      <!-- Copyright -->
      <p class="text-sm text-white">&copy; {new Date().getFullYear()} oPills. All Rights Reserved.</p>
    </div>
  </div>
</footer> 
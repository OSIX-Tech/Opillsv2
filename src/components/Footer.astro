---
import LogoIcon from './LogoIcon.astro';
import { navLinks } from '../lib/navLinks.js';
import { Icon } from 'astro-icon/components';
---

<footer id="contact" class="font-sans relative bg-brand-teal text-white">
  
  <div class="relative z-10 pt-16 pb-8 px-8">
    <div class="container mx-auto text-center">

      <!-- Logo -->
      <a href="#page-top" class="inline-flex items-center justify-center gap-3 mb-4">
        <LogoIcon class="w-12 h-12 text-white" />
        <span class="text-4xl font-bold">oPills</span>
      </a>

      <!-- Tagline -->
      <p class="text-white text-lg mb-6 max-w-lg mx-auto">
        The future of medication management, guided by expert analysts. Your health, simplified.
      </p>

      <!-- Navigation Links -->
      <div class="flex flex-wrap justify-center gap-x-8 gap-y-2 mb-8 font-script text-2xl text-white">
        {navLinks.map(link => (
          <a href={link.href} class="hover:underline transition-colors">{link.text}</a>
        ))}
      </div>

      <!-- Social Media Links -->
      <div class="flex justify-center gap-6 mb-8">
        <a href="#" class="text-white hover:opacity-80 transition-opacity" aria-label="Twitter">
          <Icon name="simple-icons:x" class="w-7 h-7" />
        </a>
        <a href="#" class="text-white hover:opacity-80 transition-opacity" aria-label="LinkedIn">
          <Icon name="simple-icons:linkedin" class="w-7 h-7" />
        </a>
      </div>

      <!-- Copyright -->
      <p class="text-sm text-white">&copy; {new Date().getFullYear()} oPills. All Rights Reserved.</p>
    </div>
  </div>
</footer> 